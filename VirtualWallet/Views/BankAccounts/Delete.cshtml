@using VirtualWallet.Utilities
@model VirtualWallet.Models.BankAccount

@{
	ViewBag.Title = "Bank Account Delete";
	UserHelper userHelper = new UserHelper();
}

<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>Delete @Model.AccountName?</h1>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>
<section class="content">
	<div class="container-fluid">
		<!-- Small boxes (Stat box) -->
		<div class="row">
			<div class="col-lg-3 col-6">
				<!-- small box -->
				<div class="small-box bg-success">
					<div class="inner">
						<h3>$@Model.CurrentBalance</h3>

						<p>Current Balance</p>
					</div>
					<div class="icon">
						<i class="fas fa-dollar-sign"></i>
					</div>
				</div>
			</div>
			<!-- ./col -->
			<div class="col-lg-3 col-6">
				<!-- small box -->
				<div class="small-box bg-warning">
					<div class="inner">
						<h3>$@Model.WarningBalance</h3>

						<p>Warning Balance</p>
					</div>
					<div class="icon">
						<i class="fas fa-exclamation-triangle"></i>
					</div>
				</div>
			</div>
			<!-- ./col -->
			<div class="col-lg-3 col-6">
				<!-- small box -->
				<div class="small-box bg-primary">
					<div class="inner">
						<h3>@userHelper.GetFullName(Model.OwnerId)</h3>

						<p>Account Owner</p>
					</div>
					<div class="icon">
						<i class="ion ion-person-add"></i>
					</div>
				</div>
			</div>
			<!-- ./col -->
			<div class="col-lg-3 col-6">
				<!-- small box -->
				<div class="small-box bg-info">
					<div class="inner">
						<h3>@Model.AccountType.ToString()</h3>

						<p>Account Type</p>
					</div>
					<div class="icon">
						<i class="fas fa-info-circle"></i>
					</div>
				</div>
			</div>
			<!-- ./col -->
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<h5 class="card-title">Delete Account?</h5>

					</div>
					<!-- /.card-header -->
					<div class="card-body">
						<p>Would you like to delete this account?</p>
						@using (Html.BeginForm())
						{
							@Html.AntiForgeryToken()

							<div class="form-actions no-color">
								<input type="submit" value="Delete" class="btn btn-danger" />

							</div>
						}
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<h5 class="card-title">The following Transactions will also be deleted</h5>

					</div>
					<!-- /.card-header -->
					<div class="card-body">
						@if (Model.Transactions.Count() < 1)
						{
							<p class="text-center">No Transactions are associated with this Account</p>
						}
						else
						{
							<table class="table">
								<thead>
									<tr>
										<th>
											@Html.Label("Budget Item")
										</th>
										<th>
											@Html.Label("Transaction Type")
										</th>
										<th>
											@Html.Label("Date")
										</th>
										<th>
											@Html.Label("Amount")
										</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model.Transactions)
									{
										<tr>
											<td>
												@Html.DisplayFor(modelItem => item.BudgetItem.ItemName)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.TransactionType)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Created)
											</td>
											<td>
												@Html.DisplayFor(modelItem => item.Amount)
											</td>
										</tr>
									}
								</tbody>
							</table>
						}
					</div>
				</div>
			</div>
		</div>
	</div>

</section>




